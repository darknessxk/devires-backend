{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "preserveConstEnums": true,
    "lib": [ "esnext" ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts", "src/routes/index.ts", "src/types/index.ts"],
    "out": "docs"
  },
  "references": [
    {"path": "../jest-transform"},
    {"path": "../jest-types"},
    {"path": "../test-utils"}
  ]
}
