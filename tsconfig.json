{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "lib": [ "esnext" ],
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts", "src/routes/index.ts", "src/types/index.ts"],
    "out": "docs"
  }
}
